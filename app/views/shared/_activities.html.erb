<table id="activities" class="table table-bordered" >
  <tbody>
    <%= render "shared/header" %>
    <%= form_for [@project, @sprint] do |f| %>
      <%= f.fields_for :activities, @sprint.activities do |activity_builder|%>
        <%= render "shared/row", activity_builder: activity_builder, row: activity_builder.index,
          type: activity_class(activity_builder.object), f: f %>
      <% end %>
      <div class="col-md-12">
        <%= f.submit t("buttons.save"), class: "btn btn-success" %>
      </div>
    <% end %>
  </tbody>
</table>
<div class="col-md-12">
  <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-plus"),
    "javascript:void(0)", class: "btn btn-primary", id: "load_more",
    type: "button" %>
</div>
<%= render "shared/more_rows" %>
